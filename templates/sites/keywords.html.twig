{% extends 'base.html.twig' %}
{% block AppMenu %}
    {{ include('menus/sitesmenu.html.twig') }}
{% endblock %}
{% block bodytitle %}
    {{site.name}} - Keywords
{% endblock %}
{% block tcright %}
    <button class="btn btn-info" data-toggle="modal" data-target="#modal-lg">Add keyword</button>
{% endblock %}
{% block body %}
<div class="row">
        <div class="col-12">
            <div class="card">
              <div class="card-body p-0">
                <table class="table table-sm table-hover text-nowrap">
                  <thead>
                    <tr>
                      <th>Site Keyword</th>
                      <th>Backlinks</th>
                      <th>Last Updated</th>
                      <th>Status</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                  {% for kw in sitekeywords %}
                    <tr>
                      <td>{{ kw.keyword }}</td>
                      <td>(coming soon)</td>
                      <td>{% if kw.updated %}{{ kw.updated|date('d-m-Y / H:i') }}{% else %} Not Updated {% endif %}</td>
                      <td><span class="tag tag-success">{{ kw.status }}</span></td>
                      <td>
                        <a href="{{ path('keyword_view', {'id': kw.id}) }}" class="btn btn-success btn-sm"><i class="fas fa-eye"></i></a>
                      </td>
                    </tr>
                    {% endfor %}
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <div class="row">
                  <div class="col-sm-12">
                     <div class="dataTables_paginate float-right">
                        <ul class="pagination">
                           <li class="paginate_button page-item previous {% if currentpage < '2' %}disabled{% endif %}"><a href="?page=1" class="page-link">First</a></li>
                           <li class="paginate_button page-item previous {% if currentpage < '2' %}disabled{% endif %}"><a href="?page={{previouspage}}" class="page-link"><i class="fa fa-angle-double-left"></i></a></li>
                           <li class="paginate_button page-item disabled"><a href="" class="page-link">{{currentpage}} of {{maxpages}}</a></li>
                           <li class="paginate_button page-item next {% if currentpage == maxpages %}disabled{% endif %}"><a href="?page={{nextpage}}" class="page-link"><i class="fa fa-angle-double-right"></i></a></li>
                           <li class="paginate_button page-item next {% if currentpage == maxpages %}disabled{% endif %}"><a href="?page={{maxpages}}" class="page-link">Last</a></li>
                        </ul>
                     </div>
                  </div>
               </div>
            <!-- /.card -->
          </div>

        </div>
{% endblock %}
{% block pageJS %}
    <!-- Additional Javascript or Jquery  -->
{% endblock %}
{% block ModalArea %}
<div class="modal fade" id="modal-lg">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title">Add Site Keyword</h4>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            {{ form_start(form) }}
            <div class="modal-body">
                <div class="row clearfix">
                    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                        <label>Keyword</label>
                    </div>
                    <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                        <div class="form-group">
                            {{ form_widget(form.Keyword, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>
       
            </div>
            <div class="modal-footer justify-content-between">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              <button type="submit" id="form-submit" class="btn btn-primary">Add Keyword</button>
            </div>
             {{ form_end(form) }}
          </div>
          <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
      </div>
      <!-- /.modal -->
{% endblock %}