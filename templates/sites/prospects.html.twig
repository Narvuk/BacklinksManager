{% extends 'base.html.twig' %}
{% block AppMenu %}
    {{ include('menus/sitesmenu.html.twig') }}
{% endblock %}
{% block bodytitle %}
    {{site.name}} - Prospects
{% endblock %}
{% block tcright %}
    <button class="btn btn-info" data-toggle="modal" data-target="#modal-lg">Add Prospect</button>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="card">
              <div class="card-body p-0">
                <table class="table table-sm table-hover text-nowrap">
                  <thead>
                    <tr>
                      <th>Prospect Name</th>
                      <th>Domain</th>
                      <th>Last Updated</th>
                      <th>Status</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                  {% for p in prospects %}
                    <tr>
                      <td>{{ p.name }}</td>
                      <td>{{ p.domain }}</td>
                      <td>{% if p.updated %}{{ p.updated|date('d-m-Y / H:m') }}{% else %} Not Updated {% endif %}</td>
                      <td><span class="tag tag-success">{{ p.status }}</span></td>
                      <td>
                        <a href="{{ path('prospect_view', {'id': p.id}) }}" class="btn btn-success btn-sm"><i class="fas fa-eye"></i></a>
                      </td>
                    </tr>
                    {% endfor %}
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>

        </div>
{% endblock %}
{% block pageJS %}
    <!-- Additional Javascript or Jquery  -->
{% endblock %}
{% block ModalArea %}
<div class="modal fade" id="modal-lg">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title">Add Prospect</h4>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            {{ form_start(form) }}
            <div class="modal-body">
                <div class="row clearfix">
                    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                        <label>Prospect Name</label>
                    </div>
                    <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                        <div class="form-group">
                            {{ form_widget(form.Name, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                        <label>Prospect Url</label>
                    </div>
                    <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                        <div class="form-group">
                            {{ form_widget(form.Domain, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>       
            </div>
            <div class="modal-footer justify-content-between">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              <button type="submit" id="form-submit" class="btn btn-primary">Add Prospect</button>
            </div>
             {{ form_end(form) }}
          </div>
          <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
      </div>
      <!-- /.modal -->
{% endblock %}