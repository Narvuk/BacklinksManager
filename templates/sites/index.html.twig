                <table class="table table-head-fixed text-nowrap">
                  <thead>
                    <tr>
                      <th>Backlink</th>
                      <th>Date</th>
                      <th>Status</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td>https://backlink.com/page/info</td>
                      <td>01-03-2020</td>
                      <td><span class="tag tag-success">New</span></td>
                      <td>
                        <button class="btn btn-success btn-sm"><i class="fas fa-eye"></i></button>
                        <button class="btn btn-info btn-sm"><i class="fas fa-check"></i></button>
                        <button class="btn btn-danger btn-sm"><i class="fas fa-times"></i></button>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>

        <div class="col-6">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Top Linking Domains</h3>

                <div class="card-tools">
                  <div class="input-group input-group-sm" style="width: 150px;">
                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                    <div class="input-group-append">
                      <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                    </div>
                  </div>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body p-0">
                <table class="table table-head-fixed text-nowrap">
                  <thead>
                    <tr>
                      <th>Domain</th>
                      <th>Backlinks</th>
                      <th>Status</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td>backlink.com</td>
                      <td>53</td>
                      <td><span class="tag tag-success">Active</span></td>
                      <td><button class="btn btn-info btn-sm">View</button></td>
                    </tr>
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>

        </div>


{% endblock %}
{% block pageJS %}
  <script language = "javascript">  
      $(document).ready(function(){   
         $("#blupdate").on("click", function(event){ 
            $('#bspin').html('');  
            $('#bspin').append('<i class="fas fa-sync fa-spin"></i>');
            $('#newbl').html('');  
            $('#newbl').append('<i class="fas fa-spinner fa-pulse"></i>');
            $('#activebl').html('');  
            $('#activebl').append('<i class="fas fa-spinner fa-pulse"></i>');  
            $('#newprosp').html('');  
            $('#newprosp').append('<i class="fas fa-spinner fa-pulse"></i>');  
            $.ajax({  
               url:        '/site/{{site.id}}/updatecount',  
               type:       'POST',   
               dataType:   'json',  
               async:      true,  

               success: function(data, status) {  
                  $('#newbl').html('');  
                  $('#newbl').append(data['newbl']);
                  $('#activebl').html('');  
                  $('#activebl').append(data['activebl']); 
                  $('#newprosp').html('');  
                  $('#newprosp').append(data['cnprosp']);
                  $('#bspin').html('');  
                  $('#bspin').append('<i class="fas fa-sync"></i>');  

                  
               },  
               error : function(xhr, textStatus, errorThrown) {  
                  alert('Ajax request failed.');  
               }  
               
            });  
         });  
      });  
   </script> 
{% endblock %}
