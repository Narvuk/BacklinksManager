            </div>
          </div>
          <div class="col-lg-3 col-6">
            <!-- small card -->
            <div class="small-box bg-green">
              <div class="inner">
                <h3 id="activebl">{{ site.activebl }}</h3>

                <p>Active BackLinks</p>
              </div>
              <div class="icon">
                <i class="fas fa-chart-bar"></i>
              </div>
              <a href="#" class="small-box-footer">
