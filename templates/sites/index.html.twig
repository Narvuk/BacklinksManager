{% extends 'base.html.twig' %}
{% block AppMenu %}
    {{ include('menus/sitesmenu.html.twig') }}
{% endblock %}
{% block bodytitle %}
    {{site.name}}
{% endblock %}
{% block tcright %}
    <button id="blupdate" class="btn btn-info"><div id="bspin"><i class="fas fa-sync"></i></div></button>
{% endblock %}
{% block body %}
<div class="row">
    <div class="col-lg-3 col-6">
            <!-- small card -->
            <div class="small-box bg-info">
              <div class="inner">
                <h3 id="newprosp">{{ site.newprosp }}</h3>
                <p>Prospects To Action</p>
              </div>
              <div class="icon">
                <i class="fas fa-chart-pie"></i>
              </div>
              <a href="#" class="small-box-footer">
                View Prospects <i class="fas fa-arrow-circle-right"></i>
              </a>
            </div>
          </div>
          <div class="col-lg-3 col-6">
            <!-- small card -->
            <div class="small-box bg-green">
              <div class="inner">
                <h3 id="activebl">{{ site.activebl }}</h3>

                <p>Active BackLinks</p>
              </div>
              <div class="icon">
                <i class="fas fa-chart-bar"></i>
              </div>
              <a href="#" class="small-box-footer">
               View Backlinks <i class="fas fa-arrow-circle-right"></i>
              </a>
            </div>
          </div>
          <div class="col-lg-3 col-6">
            <!-- small card -->
            <div class="small-box bg-purple">
              <div class="inner">
                <h3 id="newbl">{{site.newbl}}</h3>

                <p>New Backlinks</p>
              </div>
              <div class="icon">
                <i class="fas fa-smile"></i>
              </div>
              <a href="#" class="small-box-footer">
                More info <i class="fas fa-arrow-circle-right"></i>
              </a>
            </div>
          </div>
          <div class="col-lg-3 col-6">
            <!-- small card -->
            <div class="small-box bg-red">
              <div class="inner">
                <h3 id="lostbl">{{site.lostbl}}</h3>

                <p>Lost Backlinks</p>
              </div>
              <div class="icon">
                <i class="fas fa-times"></i>
              </div>
              <a href="#" class="small-box-footer">
                More info <i class="fas fa-arrow-circle-right"></i>
              </a>
            </div>
          </div>
</div>
<div class="row">
        <div class="col-6">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">New BackLinks</h3>

                <div class="card-tools">
                  <div class="input-group input-group-sm">
                    <div class="input-group-append">
                      <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                    </div>
                  </div>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body p-0">
                <table class="table table-sm table-hover">
                  <thead>
                    <tr>
                      <th>Backlink</th>
                      <th>Added</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                  {% for nb in newbls %}
                    <tr>
                      <td>{{ nb.backlink }}</td>
                      <td>{% if nb.created %}{{ nb.created|date('d-m-Y / H:i') }}{% else %} No Created Date {% endif %}</td>
                      <td>
                        <a href="{{ path('backlink_view', {'id': nb.id}) }}" class="btn btn-success btn-sm"><i class="fas fa-eye"></i></a>
                      </td>
                    </tr>
                    {% endfor %}
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>

        <div class="col-6">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">New Prospects</h3>

                <div class="card-tools">
                  <div class="input-group input-group-sm">
                    <div class="input-group-append">
                      <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                    </div>
                  </div>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body p-0">
                <table class="table table-sm table-hover">
                  <thead>
                    <tr>
                      <th>Prospect</th>
                      <th>Backlinks</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                  {% for np in newprosp %}
                    <tr>
                      <td>{{ np.domain }}</td>
                      <td>(coming soon)</td>
                      <td>
                        <a href="{{ path('prospect_view', {'id': np.id}) }}" class="btn btn-success btn-sm"><i class="fas fa-eye"></i></a>
                      </td>
                    </tr>
                    {% endfor %}
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
              
            </div>
            <!-- /.card -->
          </div>

        </div>


{% endblock %}
{% block pageJS %}
  <script language = "javascript">  
      $(document).ready(function(){   
         $("#blupdate").on("click", function(event){ 
            $('#bspin').html('');  
            $('#bspin').append('<i class="fas fa-sync fa-spin"></i>');
            $('#newbl').html('');  
            $('#newbl').append('<i class="fas fa-spinner fa-pulse"></i>');
            $('#activebl').html('');  
            $('#activebl').append('<i class="fas fa-spinner fa-pulse"></i>');  
            $('#lostbl').html('');  
            $('#lostbl').append('<i class="fas fa-spinner fa-pulse"></i>');  
            $('#newprosp').html('');  
            $('#newprosp').append('<i class="fas fa-spinner fa-pulse"></i>');  
            $.ajax({  
               url:        '/site/{{site.id}}/updatecount',  
               type:       'POST',   
               dataType:   'json',  
               async:      true,  

               success: function(data, status) {  
                  $('#newbl').html('');  
                  $('#newbl').append(data['newbl']);
                  $('#activebl').html('');  
                  $('#activebl').append(data['activebl']);
                  $('#lostbl').html('');  
                  $('#lostbl').append(data['lostbl']); 
                  $('#newprosp').html('');  
                  $('#newprosp').append(data['cnprosp']);
                  $('#bspin').html('');  
                  $('#bspin').append('<i class="fas fa-sync"></i>');  

                  
               },  
               error : function(xhr, textStatus, errorThrown) {  
                  alert('Ajax request failed.');  
               }  
               
            });  
         });  
      });  
   </script> 
{% endblock %}
