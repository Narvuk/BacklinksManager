{% extends 'base.html.twig' %}
{% block AppMenu %}
    {{ include('menus/sitesmenu.html.twig') }}
{% endblock %}
{% block bodytitle %}
    {{site.name}} - Links Tracking
{% endblock %}
{% block tcright %}
    <button class="btn btn-secondary"><i class="fas fa-sync"></i></button>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="card">
              <div class="card-body p-0">
                <table class="table table-sm table-hover text-nowrap">
                  <thead>
                    <tr>
                      <th>Tracking Campaign</th>
                      <th>Hits/Traffic</th>
                      <th>Updated</th>
                      <th>Status</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                  {% for tc in tcampaigns %}
                    <tr>
                      <td>{{ tc.title }}</td>
                      <td>{{ tc.totalhits }}</td>
                      <td>{{ tc.updated|date('Y-m-d') }}</td>
                      <td><span class="tag tag-success">{{ tc.status }}</span></td>
                      <td>
                        <a href="" class="btn btn-success btn-sm"><i class="fas fa-eye"></i></a>
                      </td>
                    </tr>
                    {% endfor %}
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>

        </div>
{% endblock %}
{% block pageJS %}
    <!-- Additional Javascript or Jquery  -->
{% endblock %}
{% block ModalArea %}

{% endblock %}