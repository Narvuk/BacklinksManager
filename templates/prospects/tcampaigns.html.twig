{% extends 'base.html.twig' %}
{% block AppMenu %}
    {{ include('menus/sitesmenu.html.twig') }}
{% endblock %}
{% block bodytitle %}
    Tracking Campaigns
{% endblock %}
{% block tcright %}
    <button class="btn btn-info" data-toggle="modal" data-target="#modal-lg">Add Url</button>
    <button class="btn btn-secondary"><i class="fas fa-sync"></i></button>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="card">
              <div class="card-body p-0">
                <table class="table table-sm table-hover text-nowrap">
                  <thead>
                    <tr>
                      <th>Tracking Camapaigns</th>
                      <th>Hits/Traffic</th>
                      <th>Updated</th>
                      <th>Status</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                  {% for tc in tcampaigns %}
                    <tr>
                      <td>{{ tc.title }}</td>
                      <td>{{ tc.totalhits }}</td>
                      <td>{{ tc.updated|date('Y-m-d') }}</td>
                      <td><span class="tag tag-success">{{ tc.status }}</span></td>
                      <td>
                        <a href="{{ path('trackcamp_view', {'id': tc.id}) }}" class="btn btn-success btn-sm"><i class="fas fa-eye"></i></a>
                      </td>
                    </tr>
                    {% endfor %}
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>

        </div>
{% endblock %}
{% block pageJS %}
    <!-- Additional Javascript or Jquery  -->
{% endblock %}
{% block ModalArea %}
<div class="modal fade" id="modal-lg">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title">Add Tracking Url</h4>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            {{ form_start(form) }}
            <div class="modal-body">
                <div class="row clearfix">
                    <div class="col-lg-3 col-md-3 col-sm-4 col-xs-5 form-control-label">
                        <label>Url Title</label>
                    </div>
                    <div class="col-lg-9 col-md-9 col-sm-8 col-xs-7">
                        <div class="form-group">
                            {{ form_widget(form.Title, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>
       
            </div>
            <div class="modal-footer justify-content-between">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              <button type="submit" id="form-submit" class="btn btn-primary">Add Url</button>
            </div>
             {{ form_end(form) }}
          </div>
          <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
      </div>
      <!-- /.modal -->
{% endblock %}