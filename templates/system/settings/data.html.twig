{% extends 'base.html.twig' %}
{% block AppMenu %}
    {{ include('menus/settingsmenu.html.twig') }}
{% endblock %}
{% block bodytitle %}
   Data Settings
{% endblock %}
{% block tcright %}
 {{ form_start(form) }}
    <button type="submit" id="form-submit" class="btn btn-success">Save</button>
{% endblock %}
{% block body %}
<div class="row clearfix">
                <div class="col-lg-9 col-md-9 col-sm-6 col-xs-12">
                    <div class="card card-blue">
                        <div class="card-header">
                            <div class="card-title">
                               Data Settings
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row clearfix">
                                <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                                    <label>Max Rows Per Page</label>
                                </div>
                                <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                                    <div class="form-group">
                                        {{ form_widget(form.MaxPageRows, {'attr': {'class': 'form-control'}}) }}
                                        <small>* This will sort the data column tables maximum results per page.</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <div class="card card-red">
                        <div class="card-header">
                            <div class="card-title">
                              Extra Information
                            </div>
                        </div>
                        <div class="card-body">
                        
                        </div>
                    </div>
                </div>
            </div>
               {{ form_end(form) }}
{% endblock %}
{% block pageJS %}
    <!-- Additional Javascript or Jquery  -->
{% endblock %}