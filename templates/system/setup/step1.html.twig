        <div class="progress-bar bg-success progress-bar-striped" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%">
            <span class="sr-only"></span>
        </div>
    </div>
{% endblock %}
{% block body %}
<div class="row clearfix">
                <div class="col-lg-9 col-md-9 col-sm-6 col-xs-12">
                    <div class="card card-blue">
                        <div class="card-header">
                            <div class="card-title">
                                Database Information
                            </div>
                        </div>
    <div class="card-body">
        {{ form_start(form) }}
    <div class="row clearfix">
<div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
    <label for="email_address_2">DB User</label>
</div>
<div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
    <div class="form-group">
<div class="form-line">
    {{ form_widget(form.dbuser, {'attr': {'class': 'form-control', 'placeholder' : 'Database User'}}) }}
</div>
    Database username that you have used to login to the database
</div>
</div>
</div>
    <div class="row clearfix">
        <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
            <label for="email_address_2">DB User Pass</label>
        </div>
    <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
        <div class="form-group">
            <div class="form-line">
                {{ form_widget(form.dbuserpass, {'attr': {'class': 'form-control', 'placeholder' : 'Database User Password'}}) }}
            </div>
                Database User password to login to the database
            </div>
        </div>
    </div>
    <div class="row clearfix">
        <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
            <label for="password_2">DB Host</label>
        </div>
            <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
        <div class="form-group">
            <div class="form-line">
                {{ form_widget(form.dbhost, {'attr': {'class': 'form-control', 'placeholder' : 'localhost'}}) }}
            </div>
                The Database host which could be an IP (eg. 123.456.67.89), localhost or 127.0.0.1
            </div>
        </div>
    </div>
    <div class="row clearfix">
        <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
            <label for="password_2">DB Port</label>
        </div>
            <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
        <div class="form-group">
    <div class="form-line">
        {{ form_widget(form.dbport, {'attr': {'class': 'form-control', 'placeholder' : '3306'}}) }}
    </div>
        if unsure use 3306
    </div>
</div>
</div>
    <div class="row clearfix">
        <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
            <label for="password_2">DB name</label>
        </div>
        <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
    <div class="form-group">
        <div class="form-line">
            {{ form_widget(form.dbname, {'attr': {'class': 'form-control', 'placeholder' : 'Database Name'}}) }}
        </div>
            The name of the database you have setup
        </div>
    </div>
</div>
        <div class="text-center mb-3">
        <button type="submit" id="form-submit" class="btn btn-primary m-t-15 waves-effect">Continue</button>
        </div>
    {{ form_end(form) }}
    
</div>

</div>
</div>
<div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <div class="card card-red">
                        <div class="card-header">
                            <div class="card-title">
                                Database Requirements
                            </div>
                        </div>
                        <div class="card-body">
                            <ul>
                                <li>
                                    <b>Database Versions</b>
                                    <ul>
                                        <li>Mysql 5.7 or Above</li>
                                        <li>MariaDB 10.2 or Above </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="card card-red">
                        <div class="card-header">
                            <div class="card-title">
                                Support Information
                            </div>
                        </div>
                        <div class="card-body">
                            <ul>
                                <li>Github Support</li>
                                <li>Website Support</li>
                                <li>Community Support</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

{% endblock %}
