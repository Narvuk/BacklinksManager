{% extends 'base.html.twig' %}
{% block AppMenu %}
    {{ include('menus/settingsmenu.html.twig') }}
{% endblock %}
{% block bodytitle %}
{% endblock %}
{% block body %}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
        <div class="card">
            <div class="header bg-red">
                <h2>
                    Edit User Account<small></small>
                </h2>
            </div>
            <div class="body">

                {{ form_start(form) }}
                <div class="row clearfix">
                    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                        <label for="email_address_2">UserName</label>
                    </div>
                    <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                        <div class="form-group">
                            <div class="form-line">
                                {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder' : ''}}) }}
                            </div>

                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                        <label for="email_address_2">User Email</label>
                    </div>
                    <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                        <div class="form-group">
                            <div class="form-line">
                                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder' : ''}}) }}
                            </div>

                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                        <label for="email_address_2">User Roles</label>
                    </div>
                    <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                        <div class="form-group">
                            <div class="form-line">
                                {{ form_widget(form.roles, {'attr': {'class': 'form-control', 'placeholder' : ''}}) }}
                            </div>

                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <center>
                        <button type="submit" id="form-submit" class="btn bg-blue waves-effect">
                            <i class="material-icons">verified_user</i><span>Save User</span></button>
                    </center>
                </div>
                {{ form_end(form) }}
                <div class="row clearfix">
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block pageJS %}
    <!-- Additional Javascript or Jquery  -->
{% endblock %}